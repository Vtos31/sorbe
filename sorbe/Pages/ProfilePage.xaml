<Page x:Class="sorbe.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sorbe"
      mc:Ignorable="d" 
       Height="800"
      Width="1555"
      Title="ProfilePage">
    <ScrollViewer>
        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
            <Grid>

                <Image x:Name="UserImage" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="400" Source="/Image/Born-like-this.jpg" Grid.RowSpan="3"/>
                <Label x:Name="UserName" Content="" HorizontalAlignment="Left" Margin="400,10,0,0" VerticalAlignment="Top" Height="125" Width="1125" Foreground="White" FontSize="100" FontFamily="Segoe UI Semibold" IsEnabled="False"/>
                <TextBox x:Name="UserNameChange" HorizontalAlignment="Left" Margin="400,10,0,0" VerticalAlignment="Top" Height="125" Width="1125" Foreground="Black" FontSize="100" FontFamily="Segoe UI Semibold" SelectionOpacity="0" Visibility="Collapsed" />
                <Button x:Name="ChangeNameButton" Margin="400,10,0,0" HorizontalAlignment="Left" Width="81" Height="30" VerticalAlignment="Top" Click="ChangeName_Click" Content="Змінити ім'я" />
                <Label x:Name="UserfavoriteGenre" Content="&quot;USER EMAIL&quot;" HorizontalAlignment="Left" Margin="413,130,0,0" VerticalAlignment="Top" Height="53" Width="1125" Foreground="#FFC3C2C2" FontSize="36" FontFamily="Segoe UI Semibold" IsEnabled="False" Grid.Row="2"/>
                <Label x:Name="UserEmail" Content="&quot;FAVORITE GENRE&quot;" HorizontalAlignment="Left" Margin="413,188,0,0" VerticalAlignment="Top" Height="72" Width="1125" Foreground="#FFC3C2C2" FontSize="36" FontFamily="Segoe UI Semibold" IsEnabled="False" Grid.Row="2"/>
                <Button x:Name="LoadImage" Content="Завантажити фото" HorizontalAlignment="Left" Margin="292,361,0,0" VerticalAlignment="Top" Height="39" Width="108" Click="LoadImage_Click"/>
                <Button x:Name="CancelChangeNameButton" Margin="486,10,0,0" HorizontalAlignment="Left" Width="81" Height="30" VerticalAlignment="Top" Click="CancelChangeName_Click" Content="Відмінити" />
            </Grid>

            <Label Foreground="White" FontSize="48" Content="Найвище оцінені альбоми" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled" >
                <StackPanel x:Name="AlbumContent" Orientation = "Horizontal" >

                </StackPanel>
            </ScrollViewer>
            <Label Foreground="White" FontSize="48" Content="Послухати пізніше" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled" >
                <StackPanel x:Name="LikeAlbumContent" Orientation = "Horizontal" >

                </StackPanel>
            </ScrollViewer>
            <Label Height="106" Foreground="#FF1A1A1A" FontSize="48" Content="sdssssssssssssssssssss"/>
        </StackPanel>
   
    </ScrollViewer>

</Page>
