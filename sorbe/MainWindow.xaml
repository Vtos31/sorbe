<Window x:Class="sorbe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sorbe"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" Height="800" Width="1520" >
    <Grid Background="#FF131313">
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="373*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Rectangle HorizontalAlignment="Left" Height="2" Stroke="Gray" VerticalAlignment="Top" Width="1920" RadiusX="7.3" RadiusY="7.3" Margin="-200,32,0,0" RenderTransformOrigin="0.5,0.5" Fill="Gray" Grid.ColumnSpan="2" Grid.Row="1"/>


        <Button Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="49" Width="49" Click="Home_Click" Grid.RowSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="534,14,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="452" Height="42" Grid.RowSpan="2"/>
        <Rectangle HorizontalAlignment="Left" Height="49" Margin="479,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="49" Grid.RowSpan="2">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <StackPanel Orientation="Horizontal" Margin="0,8,4,0" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Button x:Name="ButtonLogInPanelOpen" Content="LogIn" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="70" Height="46" Click="ButtonLogIn_Click"/>
            <Button x:Name="ButtonSignInPanelOpen" Content="SignIn"  VerticalAlignment="Center" Width="70" Height="46" Click="ButtonSignIn_Click" Margin="10,0,0,0"/>
            <Button x:Name="Profile" Content="Profile" Width="55" Height="55" Click="Profile_Click" Margin="10,0,0,0"/>
        </StackPanel>

        <Frame x:Name="Main" Margin="0,33,0,0" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2" Grid.Row="1">

        </Frame>
        <Border x:Name="AcountEnterPanel" Margin="1262,34,0,428" Visibility="Collapsed" BorderThickness="1" BorderBrush="Gray" Background="#FF131313" Grid.ColumnSpan="2" Grid.Row="1">
            <StackPanel>
                <Button  Content="X" Height="21" Width="21" HorizontalAlignment="Left" Click="AcountEnterPanelExit_Click"/>
                <Label x:Name="AcountEnterTitle" Content="Реєстрація" Foreground="White" HorizontalAlignment="Center" FontSize="24"/>

                <Label Content="Пошта" Foreground="White"  FontSize="12"/>
                <TextBox x:Name="TextboxEmail"/>
                <Label x:Name="Name" Content="Псевдонім" Foreground="White"  FontSize="12"/>
                <TextBox x:Name="TextboxName"/>
                <Label Content="Пароль" Foreground="White"  FontSize="12"/>
                <PasswordBox x:Name="TextboxPassword"/>
                <TextBox x:Name="TextboxPasswordShow" Visibility="Collapsed"/>
                <Button Height="10" Width="10" Margin="225,-17.5,0,0" Click="ShowPassword_Click"></Button>

                <Label x:Name="NonLogInText" Content="Перевірка паролю" Foreground="White"  FontSize="12"/>
                <PasswordBox x:Name="TextboxPasswordCheck" PasswordChar="●"/>
                <TextBox x:Name="TextboxPasswordCheckShow" Visibility="Collapsed"/>
                <Button x:Name="ButtonShow" Height="10" Width="10" Margin="225,-17.5,0,0" Click="ShowPasswordCheck_Click"></Button>

                <Label x:Name="ErrorLabel" Content="" Foreground="Red" Visibility="Collapsed" FontSize="9"/>

                <Button x:Name="DbSignButton" Content="Зареєструватися" Height="22" Width="98" Click="SignIn_Click"/>
                <Button x:Name="DbLogButton" Content="Авторизуватися" Height="22" Width="98" Visibility="Collapsed" Click="LogIn_Click"/>

            </StackPanel>
        </Border>

    </Grid>
</Window>
